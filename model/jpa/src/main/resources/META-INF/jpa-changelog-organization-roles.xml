<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Create Organization Role table -->
    <changeSet author="keycloak" id="organization-roles-1">
        <createTable tableName="ORG_ROLE">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="CONSTRAINT_ORG_ROLE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="ORGANIZATION_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="ORGANIZATION_ID" baseTableName="ORG_ROLE" constraintName="FK_ORG_ROLE_ORGANIZATION" referencedColumnNames="ID" referencedTableName="ORG"/>
        <addUniqueConstraint columnNames="NAME,ORGANIZATION_ID" constraintName="UK_ORG_ROLE_NAME" tableName="ORG_ROLE"/>
        
        <createIndex indexName="IDX_ORG_ROLE_ORGANIZATION" tableName="ORG_ROLE">
            <column name="ORGANIZATION_ID"/>
        </createIndex>
    </changeSet>

    <!-- Create Organization Role Attributes table -->
    <changeSet author="keycloak" id="organization-roles-2">
        <createTable tableName="ORG_ROLE_ATTRIBUTE">
            <column name="ORG_ROLE_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="VARCHAR(255)"/>
        </createTable>
        
        <addPrimaryKey columnNames="ORG_ROLE_ID,NAME" constraintName="CONSTRAINT_ORG_ROLE_ATTRIBUTE_PK" tableName="ORG_ROLE_ATTRIBUTE"/>
        <addForeignKeyConstraint baseColumnNames="ORG_ROLE_ID" baseTableName="ORG_ROLE_ATTRIBUTE" constraintName="FK_ORG_ROLE_ATTRIBUTE" referencedColumnNames="ID" referencedTableName="ORG_ROLE"/>
        
        <createIndex indexName="IDX_ORG_ROLE_ATTRIBUTE" tableName="ORG_ROLE_ATTRIBUTE">
            <column name="ORG_ROLE_ID"/>
        </createIndex>
    </changeSet>

    <!-- Create Organization Role Mapping table -->
    <changeSet author="keycloak" id="organization-roles-3">
        <createTable tableName="ORG_ROLE_MAPPING">
            <column name="ORG_ROLE_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="ORG_ROLE_ID,USER_ID" constraintName="CONSTRAINT_ORG_ROLE_MAPPING_PK" tableName="ORG_ROLE_MAPPING"/>
        <addForeignKeyConstraint baseColumnNames="ORG_ROLE_ID" baseTableName="ORG_ROLE_MAPPING" constraintName="FK_ORG_ROLE_MAPPING_ROLE" referencedColumnNames="ID" referencedTableName="ORG_ROLE"/>
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="ORG_ROLE_MAPPING" constraintName="FK_ORG_ROLE_MAPPING_USER" referencedColumnNames="ID" referencedTableName="USER_ENTITY"/>
        
        <createIndex indexName="IDX_ORG_ROLE_MAPPING_ROLE" tableName="ORG_ROLE_MAPPING">
            <column name="ORG_ROLE_ID"/>
        </createIndex>
        <createIndex indexName="IDX_ORG_ROLE_MAPPING_USER" tableName="ORG_ROLE_MAPPING">
            <column name="USER_ID"/>
        </createIndex>
    </changeSet>

    <!-- Create Organization Role Composite table -->
    <changeSet author="keycloak" id="organization-roles-4">
        <createTable tableName="ORG_ROLE_COMPOSITE">
            <column name="COMPOSITE" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="CHILD_ROLE" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="COMPOSITE,CHILD_ROLE" constraintName="CONSTRAINT_ORG_ROLE_COMPOSITE_PK" tableName="ORG_ROLE_COMPOSITE"/>
        <addForeignKeyConstraint baseColumnNames="COMPOSITE" baseTableName="ORG_ROLE_COMPOSITE" constraintName="FK_ORG_ROLE_COMPOSITE" referencedColumnNames="ID" referencedTableName="ORG_ROLE"/>
        <addForeignKeyConstraint baseColumnNames="CHILD_ROLE" baseTableName="ORG_ROLE_COMPOSITE" constraintName="FK_ORG_ROLE_CHILD" referencedColumnNames="ID" referencedTableName="KEYCLOAK_ROLE"/>
        
        <createIndex indexName="IDX_ORG_ROLE_COMPOSITE" tableName="ORG_ROLE_COMPOSITE">
            <column name="COMPOSITE"/>
        </createIndex>
        <createIndex indexName="IDX_ORG_ROLE_CHILD" tableName="ORG_ROLE_COMPOSITE">
            <column name="CHILD_ROLE"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>